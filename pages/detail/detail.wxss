.page .back {
  width: 100%;
  height: 400rpx;
}
.page .detail {
  padding: 30rpx;
}
.page .detail .title {
  width: 100%;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.page .detail .time {
  margin-top: 10rpx;
  color: #999999;
  font-size: 25rpx;
}
.page .detail .html {
  width: 100%;
  min-height: 50rpx;
  font-size: 28rpx;
  color: #333333;
}
.page .detail .html image {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
